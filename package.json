{
  "name": "neo_obj2gltf",
  "version": "4.0.0",
  "description": "Convert OBJ model format to glTF",
  "license": "Apache-2.0",
  "type": "module",
  "contributors": [
    {
      "name": "Cesium GS, Inc. and Contributors",
      "url": "https://github.com/CesiumGS/obj2gltf/graphs/contributors"
    }
  ],
  "keywords": [
    "obj",
    "gltf"
  ],
  "homepage": "https://github.com/CesiumGS/obj2gltf",
  "repository": {
    "type": "git",
    "url": "git@github.com:CesiumGS/obj2gltf.git"
  },
  "bugs": {
    "url": "https://github.com/CesiumGS/obj2gltf/issues"
  },
  "main": "index.js",
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "earcut": "2.2.4",
    "fs-extra": "^11.0.0",
    "jpeg-js": "^0.4.3",
    "pngjs": "^7.0.0"
  },
  "devDependencies": {
    "eslint": "^8.0.1",
    "eslint-config-cesium": "^10.0.1",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-n": "^16.1.0",
    "husky": "^8.0.3",
    "jasmine": "^5.0.0",
    "jasmine-spec-reporter": "^7.0.0",
    "jsdoc": "^4.0.0",
    "lint-staged": "^15.0.2",
    "nyc": "^15.1.0",
    "prettier": "3.1.1"
  },
  "lint-staged": {
    "*.(js|ts)": [
      "eslint --cache --quiet --fix",
      "prettier --write"
    ],
    "*.!(js|ts)": "prettier --write"
  },
  "scripts": {
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "jsdoc": "jsdoc ./lib -R ./README.md -d doc",
    "eslint": "eslint \"./**/*.js\" --cache --quiet",
    "test": "jasmine --config=specs/jasmine.json",
    "prettier": "prettier --write \"**/*\"",
    "prettier-check": "prettier --check \"**/*\""
  }
}
